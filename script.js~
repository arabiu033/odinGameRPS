// creating a game :)

function computerPlay(){
  let choose = Math.floor(Math.random * 100);
  let dec1 = "Rock";
  let dec2 = "Paper";
  let dec3 = "Scissors"
  let pick;

  if (choose % 3 == 0 || choose % 5 == 0)
    pick = dec1;
  else if (choose % 2 == 0)
    pick = dec2;
  else
    pick = dec3;

  return pick;
}
